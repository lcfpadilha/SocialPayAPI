<style>
    .wrap {
        margin-top: 5px;
        border: 1px solid #ddd;
        background-color: #f5f5f5;
        border-radius: 8px;
    }

    .panel {
        border-radius: 8px;
    }
    
    .panel .panel-heading, .panel-title {
        background-color: green;
        color: white;
        text-align: center;
        border-top-right-radius: 7px;
        border-top-left-radius: 7px;
        padding: 5px;
        font-size: 24px;
        font-weight: bold;
    }
    
    .panel .body-title {
        width: 100%;
        background-color: #f0f0f0;
        border-bottom: 1px solid #ddd;
        padding: 8px;
        padding-left: 15px;
        font-weight: bold;
        font-size: 18px;
        color: green;
    }
    
    .clearfix {
        clear: both;
    }

    .btn.btn-success {
        background-color: green !important;
    }

    .green {
        color: green;
        font-weight: bold;
    }

    .panel-charity .media-body {
        margin-top: 0;
        margin-bottom: 10px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_tag(payment_path, method: :post, id: 'simplify-payment-form') do %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        SocialPay
                    </h3>
                </div>
                <div class="body-title">
                        Dados da Compra:
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="cardNumber">
                            Vendedor</label>
                        <div class="input-group">
                            <%= @seller %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cardNumber">Descrição</label>
                        <div class="input-group">
                            <%= @info %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cardNumber">Total</label>
                        <div class="input-group">
                            <%= @value %>
                        </div>
                    </div>
                </div>
                <div class="body-title">
                        Para Caridade:
                </div>
                <div class="panel-body panel-charity">
                    <label>Escolha uma instituição:</label>
                    <div class="media"> <div class="media-body"> 
                    <select name="user_id" class='form-control'>
                      <%= @users.each do |user| %>
                        <option value="<%= user.id %>"><%= user.name %></option>
                      <% end %>
                    </select>
                    </div> </div>

                    <p>Será doado um valor de <span class="green"><%= @donation %></span>, à parte do valor da compra.</p>
                </div>
                <div class="panel-footer">
                    <%= submit_tag('Pagar', id: 'process-payment-btn', class: "btn btn-success btn-block") %>
                    <% end %>
                </div>
            </div>

            <div class="alert alert-danger" role="alert" id="error" style="display: none;">
            </div>
            <input type="hidden" id="ckey" name="ckey" value="" />
        </div>
    </div>
</div>
