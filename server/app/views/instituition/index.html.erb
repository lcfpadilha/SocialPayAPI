<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                       Parceiros
                    </h3>
                </div>
                <div class="panel-body">


<% if @instituitions.present? %>
  <% @instituitions.each do |instituition| %>
    <%= instituition.name %> -
    <%= instituition.description %>
    <br>
  <% end %>
<% else %>
  <p>Não há nenhuma instituicao cadastrada.</p>
<% end %>

                </div>
            </div>

        </div>
    </div>
</div>