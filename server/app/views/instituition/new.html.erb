<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Cadastro
                    </h3>
                </div>
                <div class="panel-body">


<h2>Fale sobre a sua instituição</h2>
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>
<%= form_for @instituition, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :name %>
  </div>
  <br><br>
  <div class="field">
    <%= f.label :descrição %><br />
    <%= f.text_field :description %>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>

                </div>
            </div>
        </div>
    </div>
</div>